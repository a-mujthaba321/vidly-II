@model IEnumerable<Vidly_II.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-8">
        <h2>Customers</h2>
    </div>

    <div class="col-4">
        @Html.ActionLink("Add Customer", "Create", "Customers", null, new { @class = "btn btn-primary" })
        @*<a href="/customers/edit/@Model.Id" class="btn btn-primary">Edit</a>*@
    </div>
</div>

@if (!Model.Any())
{
    <text>No Customers</text>
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Discount Rate</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var customer in Model)
        {
            <tr>
                <th scope="row">@customer.Id</th>
                <td><a href="/customers/details/@customer.Id">@customer.Name</a></td>
                <td>@customer.MembershipType.Name</td>
            </tr>

        }
    </tbody>
</table>


